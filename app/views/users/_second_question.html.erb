<div id="second_question" style="display:none;">

<div class="shadow-lg p-1 mb-2 bg-white rounded" style="padding:2px; margin-top: 1px;">

<%= render 'hukidasi' %>
<%= render 'life_bar' %>

<div class="swiper-container2">
  <div class="swiper-wrapper">
    <div class="slide"><%= image_tag 'ofise2.jpg'%></div>
    <div class="slide"><%= image_tag 'ofise2.jpg'%></div>
    <div class="slide"><%= image_tag 'ofise2.jpg'%></div>
    <div class="slide"><%= image_tag 'ofise2.jpg'%></div>
  </div>
</div>

</div>

<div class="shadow-lg p-2 mb-2 bg-white rounded" style="padding:1px; margin-top: 1px">

<% @second_question.each do |second_question| %>
  <% unless second_question.id == 1 %>
      <div class="q_<%= second_question.id %>" style="display:none;">
  <% else %>
      <div class="q_<%= second_question.id %>">
  <% end %>
  <p>Q<%= second_question.id %> <%= second_question.question %></p>
      <%= form_with model: @total, method: :post, remote: true do %>
          <% @second_answers.each do |second_answer| %>
              <% if second_question.id == second_answer.second_question_id %>
                  <p class="send_data_selection<%= second_answer.second_question_id %> experience shadow p-2 mb-3 bg-white rounded " style="padding:3px; margin:2px" href=".q_<%= second_answer.second_question_id.to_i + 1 %>" type="submit" data-send-id = <%= second_answer.score %> ><%= second_answer.answer %></p>
              <% end %>
          <% end %>
      <% end %>
  </div>
<% end %>

<%= render 'question_result_score' %>

</div>
</div>


