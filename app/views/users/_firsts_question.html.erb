<div id="first_question" style="display:none;">
    <div class="shadow-lg p-1 mb-3 bg-white rounded" style="padding:3px; margin: 1px;">

    <%= render 'hukidasi' %>
    <%= render 'life_bar' %>

    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="slide"><%= image_tag 'ofise3.jpeg'%></div>
            <div class="slide"><%= image_tag 'ofise3.jpeg'%></div>
            <div class="slide"><%= image_tag 'ofise3.jpeg'%></div>
            <div class="slide"><%= image_tag 'ofise3.jpeg'%></div>
        </div>
    </div>
    </div>

<div class="shadow-lg p-3 mb-3 bg-white rounded" style="padding:5px; margin-top: 1px">
    <% @first_question.each do |first_question| %>
        <% unless first_question.id == 1 %>
            <div class="q_<%= first_question.id %>" style="display:none;">
        <% else %>
            <div class="q_<%= first_question.id %>">
        <% end %>
        <p>Q<%= first_question.id %> <%= first_question.question %></p>
            <%= form_with model: @total, method: :post, remote: true do %>
                <% @first_answers.each do |first_answer| %>
                    <% if first_question.id == first_answer.first_question_id %>
                        <p class="send_data_selection<%= first_answer.first_question_id %> experience shadow p-2 mb-3 bg-white rounded " style="padding:3px; margin:2px" href=".q_<%= first_answer.first_question_id.to_i + 1 %>" type="submit" data-send-id = <%= first_answer.score %> ><%= first_answer.answer %></p>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    <% end %>

    <%= render 'question_result_score' %>
</div>
</div>
