<% content_for(:html_title) { 'ユーザー登録' } %>
<div class="container">
<div class="row d-flex align-items-center justify-content-center">
<div class="col-md-5 ">

<div class="login-title text-family2">
    <div class="text-center title-position">
        <h3>ユーザー登録画面</h3>
    </div>
        <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
                <%= f.label :name, t('users.new.name') , class: "form-label"%>
                <span class="badge badge-danger">必須</span>
                <%= f.text_field :name, class: "form-control", placeholder:"例: さとう たろう" %>
            </div>
            <div class="form-group">
                <%= f.label :email, t('users.new.email'), class: "form-label"%>
                <span class="badge badge-danger">必須</span>
                <%= f.email_field :email, class: "form-control", placeholder:"例: ***@example.com"%>
            </div>
            <div class="form-group">
                <%= f.label :password, t('users.new.password'), class: "form-label" %>
                <span class="badge badge-danger">必須</span>
                <%= f.password_field :password, class: "form-control"  %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, t('users.new.password_confirmation'), class: "form-label" %>
                <span class="badge badge-danger">必須</span>
                <%= f.password_field :password_confirmation, class: "form-control"  %>
            </div>
            <%= f.submit t('users.new.sign_up'), class: "btn btn-info" %>
        <% end %>
</div>
</div>
</div>
</div>