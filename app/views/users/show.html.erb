<div class="col-lg-12 col-md-12 col-sm-12">
        <div class="login-title3 text-family2 mx-auto">
            <h2 class="text-right"><a href="/users" class="arror-color"><i class="fas fa-arrow-right"></i></a></h2>
            <div class="text-center title-position">
                <h3>ユーザー情報</h3>
            </div>
            <%= form_with model: @user, local: true do |f| %>
                <div class="form-group mt-3">
                    <%= f.label :name, t('users.new.name'), class: "form-label"%>
                    <span class="badge badge-danger">必須</span>
                    <%= f.text_field :name, class: "form-control", value: @user.name%>
                </div>
                <div class="form-group mt-3">
                    <%= f.label :email, t('users.new.email'), class: "form-label" %>
                    <span class="badge badge-danger">必須</span>
                    <%= f.email_field :email, class: "form-control", value: @user.email%>
                </div>
                <div class="login-button text-center mt-5">
                    <%= f.submit "更新", class: "btn btn--orange btn--cubic btn--shadow w-25"%>
                </div>
            <% end %>

            <div class="text-center mt-5">
                <p>パスワードを忘れた方は<a href="/password_resets/new">こちら</a></p>
                <p><a href="/logout" data-method="post">ログアウト</a></p>
            </div>
        </div>
    </div>


