                                    <% end %>
                                    </div>
                                    <div class= "modal-boy-position">
                                        <%= image_tag "top_boy.png",:size =>'210x340'%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% elsif @user.position == "そこそこメンタル中間管理職" %>
                    <div class="modal-window question-start-text2">
                        <div class="row modal-text2">
                            <div class="col-md-12 mx-auto">
                                <div class="modal-light-page">
