<div id="q_01" >
  <p>Q1: <%=  @first_question1.question %></p>
  <%= form_with url: firsts_path, method: :post, remote: true do %>
    <% @first_answers1.each do |first_answer| %>
      <p class="send_data_selection1" data-send-id = <% first_answer %> ><%= first_answer.answer %></p>
    <% end %>
    <input type="hidden" name="id" id="send_data">
    <input class="next_question_button" href="#q_02" type="submit" value="次へ">
  <% end %>
</div>

