<div id="first_question">

    <%= render 'users/hukidasi' %>
    <%= render 'users/life_bar' %>
    <%= render 'users/boy' %>

    <div class="swiper-container-example">
        <div class="swiper-wrapper">
            <div class="slide"><%= image_tag 'ofise4.jpeg'%></div>
            <div class="slide"><%= image_tag 'ofise4.jpeg'%></div>
        </div>
    </div>

    <% @first_question.each do |first_question| %>
        <% unless first_question.id == 1 %>
            <div class="<%= first_question.id %> mt-3" style="display:none;">
        <% else %>
            <div class="<%= first_question.id %>" mt-3">
        <% end %>
        <div class="question-field">
        <div style="margin: 10px;" class="text-style">Q<%= first_question.id %> <%= first_question.question %></div>
            <%= form_with model: @total, method: :post, remote: true do %>
                <% first_question.first_answers.each do |first_answer| %>
                    <% if first_question.id == first_answer.first_question_id %>
                      <div style="margin-top: 3px;">
                        <button class="send_data_example btn-example" style="padding:3px; margin:5px; height: 50px;" href="<%= first_answer.first_question_id.to_i %>" type="submit" data-send-id = <%= first_answer.score %> ><%= first_answer.answer %></button>
                      </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>
        </div>
    <% end %>

    <%= render 'example_result' %>

</div>
